.kola-header
  position: fixed
  width: 100%
  height: 55px
  line-height: 55px
  padding 0 10px 0 10px
  box-sizing: border-box
  display flex
  flex-direction: row
  justify-content: center
  align-items: center
  .header-back
    position: absolute
    left: 10px
    font-size: 22px
  .header-title
    flex 1
    text-overflow: ellipsis
    white-space: nowrap
    text-align: center
    font-size 18px
    letter-spacing 2px
    font-weight bold
  .header-scan
    font-size: 22px
    display inline-block
    height 22px
    width 22px
  .searchbanner
    flex: 1
    margin 0 15px;
    line-height: 27px;
    height: 30px;
    color: #727273;
    cursor: text;
    font-size: 13px;
    background-color: #fff;
    text-align: left;
    border: 2px solid red;
    border-radius: 30px;
    .searchContent
      padding-left: 16px
  .header-setting
    display inline-block
    height 28px
    width 28px
    margin-right 40px
  .header-msg
    display inline-block
    height 28px
    width 28px
    